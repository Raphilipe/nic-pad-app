<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:sf="sap.f" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" controllerName="sap.ui.demo.todo.controller.UserForgotPass" displayBlock="false">
	<Page title="{i18n>userForgotPassTitle}" showNavButton="true" navButtonPress=".onNavBack">
		<content>
			<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
